<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_photo_card"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_width"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="2dp">

    <ProgressBar
        android:id="@+id/pb_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" />

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/iv_photo_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo" />

    <com.haretskiy.pavel.magiccamera.ui.views.BorderTextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:outerShadowRadius="10dp"
        app:strokeColor="@android:color/black"
        app:strokeJoinStyle="round" />

</android.support.v7.widget.CardView>
